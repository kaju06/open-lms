<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Author</th>
      <th>Title</th>
      <th>Publication</th>
      <th>Edition</th>
      <th>No of copies</th>
      <th>Volumn</th>
      <th>Date of pub</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.publication %></td>
        <td><%= book.edition %></td>
        <td><%= book.no_of_copies %></td>
        <td><%= book.volumn %></td>
        <td><%= book.date_of_pub %></td>
        <td><%= book.price %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Import Book details</h3>
<%= form_tag import_books_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Books"%>
<% end %>

<%= link_to 'New Book', new_book_path %>
